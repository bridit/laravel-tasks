{
  "name": "bridit/laravel-tasks",
  "description": "Tasks with queue support to Laravel",
  "keywords": [
    "bridit",
    "laravel",
    "task",
    "queue"
  ],
  "homepage": "https://github.com/bridit/laravel-tasks",
  "license": "MIT",
  "authors": [
    {
      "name": "Gustavo Siqueira",
      "email": "gus@brid-it.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "laravel/framework": "~5.8|^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "psr-4": {
      "Bridit\\Laravel\\Tasks\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bridit\\Laravel\\Tasks\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
